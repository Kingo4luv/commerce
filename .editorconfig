root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,ts,vue,json}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.{yml,yaml}]
indent_style = tab
indent_size = 4

[*.{html,css,scss}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.{sh,bash}]
end_of_line = lf
